<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:layout_marginTop="@dimen/item_default_margin"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100">
        <TextView
            android:id="@+id/date_text"
            android:layout_width="0dp"
            android:textSize="15sp"
            android:layout_weight="50"
            android:textAlignment="textStart"
            android:maxLines ="1"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingLeft="@dimen/minimal_padding"
            android:paddingStart="@dimen/minimal_padding" />

        <TextView
            android:id="@+id/total_text"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:layout_weight="50"
            android:textAlignment="textEnd"
            android:maxLines ="1"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingRight="@dimen/minimal_padding"
            android:paddingEnd="@dimen/minimal_padding"/>

    </LinearLayout>

</android.support.v7.widget.CardView>



